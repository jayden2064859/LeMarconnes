@{
    ViewData["Title"] = "Reservering - Stap 3: Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Reservering - Stap 3: Details invullen</h2>


    @if (TempData["Error"] != null)
    {
        <div class="col-md-8 mx-auto">
        <div class="alert alert-danger">@TempData["Error"]</div>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="CreateReservation3" asp-controller="Reservation" method="post">
                        <!-- personen -->
                        <div class="mb-4">
                            <h5>Aantal personen</h5>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Volwassenen (max. 4) *</label>
                                    <input type="number" name="adultsCount" 
                                           value="1" class="form-control"/>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Kinderen 0-7 jaar (max. 2)</label>
                                    <input type="number" name="children0_7Count" 
                                           value="0" class="form-control" />
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Kinderen 7-12 jaar (max. 2)</label>
                                    <input type="number" name="children7_12Count" 
                                           value="0" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <!-- extras -->
                        <div class="mb-4">
                            <h5>Extra's</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Honden (max. 2)</label>
                                    <input type="number" id="dogsCount" name="dogsCount"
                                           value="0" class="form-control" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           id="hasElectricity" name="hasElectricity" value="true"
                                           onchange="toggleElectricityDays()" />
                                    <label class="form-check-label" for="hasElectricity">
                                        Elektriciteit gewenst (beide accommodaties)
                                    </label>
                                </div>
                            </div>

                            <div class="mb-4">
                            <div class="row">
                            <div class="col-md-6 mb-3">
                            <div id="electricityDaysGroup" style="display: none;" class="mb-3">
                                <label class="form-label">Aantal dagen elektriciteit (max @ViewBag.NumberOfNights)</label>
                                <input type="number" id="electricityDays" name="electricityDays"
                                       value="1" class="form-control" />
                            </div>
                            </div>
                            </div>

                           
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("CreateReservation2")" class="btn btn-outline-secondary">
                                ← Terug
                            </a>
                            <button type="submit" class="btn custom-green">
                                Reservering plaatsen
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleElectricityDays() {
        const group = document.getElementById('electricityDaysGroup');
        const checkbox = document.getElementById('hasElectricity');
        group.style.display = checkbox.checked ? 'block' : 'none';

        if (checkbox.checked) {
            document.getElementById('electricityDays').required = true;
        } else {
            document.getElementById('electricityDays').required = false;
        }
    }
</script>