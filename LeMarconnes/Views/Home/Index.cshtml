@{
    ViewData["Title"] = "Le Marconnès";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welkom bij Le Marconnès</h1>
        <p class="lead">Beheer je reserveringen, of maak eenvoudig een nieuwe</p>
    </div>

    <div class="row justify-content-center">
        <!-- Inloggen -->
        <div class="col-md-5 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm text-center">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title mb-3">Heb je al een account?</h5>
                        <p class="text-muted">
                            Log in om je reserveringen te bekijken of een nieuwe te maken.
                        </p>
                    </div>

                    <a asp-action="Login" class="btn btn-success mt-3">
                        Inloggen
                    </a>
                </div>
            </div>
        </div>

        <!-- Registreren -->
        <div class="col-md-5 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm text-center">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title mb-3">Nog geen account?</h5>
                        <p class="text-muted">
                            Maak een account aan en start direct met reserveren.
                        </p>
                    </div>

                    <a asp-action="CreateAccount" class="btn btn-primary mt-3">
                        Registreren
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>