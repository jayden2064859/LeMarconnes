@{
    ViewData["Title"] = "Persoonlijke gegevens";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center" style="max-width: 700px; margin: 0 auto">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center" style="max-width: 700px; margin: 0 auto">
        @TempData["Error"]
    </div>
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Stap 2: Persoonlijke gegevens</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="CreateCustomer" method="post">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Vul je persoonlijke gegevens in</h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="firstName" class="form-label">Voornaam *</label>
                                    <input type="text" id="firstName" name="firstName" class="form-control" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="lastName" class="form-label">Achternaam *</label>
                                    <input type="text" id="lastName" name="lastName" class="form-control" required>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="infix" class="form-label">Tussenvoegsel</label>
                            <input type="text" id="infix" name="infix" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Telefoonnummer *</label>
                            <input type="tel" id="phone" name="phone" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label">Adres *</label>
                            <input type="text" id="address" name="address" class="form-control" required>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-shield-check"></i>
                                Je gegevens worden veilig opgeslagen en alleen gebruikt voor reserveringen.
                            </small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="CreateAccount" class="btn btn-secondary">
                                ← Terug
                            </a>
                            <button type="submit" class="btn btn-success">
                                Registratie voltooien
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>