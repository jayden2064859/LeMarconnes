@{
    ViewData["Title"] = "Le Marconnès";

    // session data ophalen
    var username = Context.Session.GetString("Username");
    var firstName = Context.Session.GetString("FirstName");
    var lastName = Context.Session.GetString("LastName");
    var accountId = Context.Session.GetInt32("AccountId");
    var userRole = Context.Session.GetString("AccountRole");
    var email = Context.Session.GetString("Email");
    var phone = Context.Session.GetString("Phone");
    var customerId = Context.Session.GetInt32("CustomerId");
}

<div class="container mt-5">
    <div class="text-center mb-5" style="padding: 15px;">
        @if (!string.IsNullOrEmpty(Context.Session.GetString("FirstName")))
        {
            <h1 class="display-4">Welkom, @firstName</h1>
        }
        else if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
        {
            <h1 class="display-4">Welkom, @username</h1>
        }
        else
        {
            <h1 class="display-4">Welkom bij Le Marconnès!</h1>
        }

      
        <!-- toon ingelogde gebruiker -->
        @if (Context.Session.GetInt32("AccountId") != null)
        {
            <div class="row justify-content-center">

                <!-- nieuwe reservering maken -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Digitale reservering</h5>
                                <p class="text-muted">
                                    Maak gemakkelijk online een nieuwe reservering voor je verblijf bij Le Marconnès
                                </p>
                            </div>
                            <a asp-action="Reservation" class="btn btn-custom mt-3">
                                <i class="bi bi-person-plus me-2"></i>Reserveer nu
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Direct reserveren -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Direct reserveren</h5>
                                <p class="text-muted">
                                    Reserveer zonder account via telefoon of email.
                                </p>
                            </div>
                            <div>
                                <p class="mb-1">tel: +33(0) 471-01 01 16</p>
                                <p class="mb-0">mail: info@lemarconnes.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row justify-content-center">
                <!-- inloggen -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Heb je al een account?</h5>
                                <p class="text-muted">
                                    Log in om je reserveringen te bekijken of een nieuwe te maken.
                                </p>
                            </div>
                            <a asp-action="Login" class="btn btn-success mt-3">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Inloggen
                            </a>
                        </div>
                    </div>
                </div>

                <!-- registreren -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Nog geen account?</h5>
                                <p class="text-muted">
                                    Maak een account aan en start direct met reserveren.
                                </p>
                            </div>
                            <a asp-action="CreateAccount" class="btn btn-custom mt-3">
                                <i class="bi bi-person-plus me-2"></i>Registreren
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Direct reserveren -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Direct reserveren</h5>
                                <p class="text-muted">
                                    Reserveer zonder account via telefoon of email.
                                </p>
                            </div>
                            <div>
                                <p class="mb-1">tel: +33(0) 471-01 01 16</p>
                                <p class="mb-0">mail: info@lemarconnes.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- algemene informatie (altijd zichtbaar) -->
    <div class="row mb-1">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Over Le Marconnès
                    </h5>
                    <p class="card-text">
                        Welkom bij Camping Le Marconnès! Geniet van de rust en natuur in onze prachtige omgeving.
                        Of je nu komt voor een weekendje weg of een lange vakantie, wij hebben de perfecte accommodatie voor jou.
                    </p>
                    <div class="row">
                        <div class="col-md-4">
                            <i class="bi bi-clock text-primary me-2"></i>
                            <strong>Adres:</strong> 43420 Saint-Arcons-de-Barges, Frankrijk
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>