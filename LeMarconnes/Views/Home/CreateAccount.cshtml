@{
    ViewData["Title"] = "Account aanmaken";
}

<h2 class="text-center mb-4" style="padding-top: 150px;">Stap 1/2: Account aanmaken</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="CreateAccount" method="post">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Account gegevens</h5>

                        <div class="mb-3">
                            <label for="username" class="form-label">Gebruikersnaam *</label>
                            <input type="text" id="username" name="username" class="form-control">
                            <div class="invalid-feedback">Gebruikersnaam is verplicht</div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Wachtwoord *</label>
                            <input type="password" id="password" name="password" class="form-control">
                            <div class="invalid-feedback">Wachtwoord is verplicht</div>
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Bevestig wachtwoord *</label>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
                            <div class="invalid-feedback">Wachtwoorden moeten overeenkomen</div>
                        </div>

                    <div class="alert @(TempData["Error"] != null ? "alert-danger" : "alert-info")">
                        <small>

                            <i class="bi bi-info-circle"></i>
                            @if (TempData["Error"] != null)
                            {
                                @TempData["Error"]
                            }
                            else
                            {
                                @:Na het aanmaken van je account ga je naar stap 2 om je persoonlijke gegevens in te vullen.
                            }
                        </small>
                    </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Volgende → 
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>





@section Scripts {

}