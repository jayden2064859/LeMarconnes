@{
    ViewData["Title"] = "Le Marconnès";

    // user data ophalen uit session
    var username = Context.Session.GetString("Username");
    var firstName = Context.Session.GetString("FirstName");
}


<div class="container mt-5">
    <div class="text-center mb-5" style="padding: 15px;">
        @if (!string.IsNullOrEmpty(Context.Session.GetString("FirstName")))
        {
            <h1 class="display-4 mb-5">Welkom, @firstName</h1>
        }
        else if (!string.IsNullOrEmpty(Context.Session.GetString("Username")))
        {
            <h1 class="display-4 mb-5">Welkom, @username</h1>
        }
        else
        {
            <h1 class="display-4 mb-5">Welkom bij Le Marconnès!</h1>
        }

        <!-- view voor ingelogde gebruiker -->
        @if (Context.Session.GetInt32("AccountId") != null)
        {
            <div class="row justify-content-center">

                <!-- nieuwe reservering maken -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Online reservering</h5>
                                <p class="text-muted">
                                    Maak gemakkelijk online een nieuwe reservering voor je verblijf bij Le Marconnès
                                </p>
                            </div>
                            <a asp-action="CreateReservation1" class="btn custom-green mt-3">
                                <i class="bi bi-person-plus me-2"></i>Reserveer nu
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Direct reserveren -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Direct reserveren</h5>
                                <p class="text-muted">
                                    Reserveer zonder account via telefoon of email.
                                </p>
                            </div>
                            <div>
                                <p class="mb-1">tel: +33(0) 471-01 01 16</p>
                                <p class="mb-0">mail: info@lemarconnes.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row justify-content-center">
                <!-- login page link -->
                <div class="col-md-6 col-lg-5 mb-4" style="padding: 25px;  max-width: 450px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Online reserveren</h5>
                                <p class="text-muted mb-4">
                                    Log in of maak een account aan om eenvoudig online je verblijf bij camping Le Marconnès te reserveren
                                </p>
                            </div>

                            <div class="d-grid gap-3">
                                <a asp-action="Login" class="btn btn-custom">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Verder
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- direct reserveren -->
                <div class="col-md-5 col-lg-4 mb-4" style="padding: 25px;">
                    <div class="card h-100 shadow-sm text-center">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-3">Direct reserveren</h5>
                                <p class="text-muted">
                                    Reserveer zonder account via telefoon of email.
                                </p>
                            </div>
                            <div>
                                <p class="mb-1">tel: +33(0) 471-01 01 16</p>
                                <p class="mb-0">mail: info@lemarconnes.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>    

    <!-- algemene informatie (altijd zichtbaar) -->
    <div class="row mb-1">
        <div class="col-12">
            <div class="card bg-light mx-auto" style="max-width: 850px; width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Over Le Marconnès
                    </h5>
                    <p class="card-text">
                        Welkom bij Camping Le Marconnès! Geniet van de rust en natuur in onze prachtige omgeving.
                        Of je nu komt voor een weekendje weg of een lange vakantie, wij hebben de perfecte accommodatie voor jou.
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <i class="bi bi-clock text-primary me-2"></i>
                            <strong>Adres:</strong> 43420 Saint-Arcons-de-Barges, Frankrijk
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>