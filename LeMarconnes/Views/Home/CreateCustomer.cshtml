@{
    ViewData["Title"] = "Persoonlijke gegevens";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center" style="max-width: 700px; margin: 0 auto">
        @TempData["Success"]
    </div>
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="padding-top: 150px;">Stap 2/2: Persoonlijke gegevens</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <form asp-action="CreateCustomer" method="post">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Vul je persoonlijke gegevens in</h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="firstName" class="form-label">Voornaam *</label>
                                    <input type="text" id="firstName" name="firstName" class="form-control">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="lastName" class="form-label">Tussenvoegsel</label>
                                    <input type="text" id="infix" name="infix" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="infix" class="form-label">Achternaam *</label>
                            <input type="text" id="lastName" name="lastName" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" id="email" name="email" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Telefoonnummer *</label>
                            <input type="tel" id="phone" name="phone" class="form-control">
                        </div>


                        <div class="alert @(TempData["Error"] != null ? "alert-danger" : "alert-info")">
                            <small>
                                <i class="bi bi-shield-check"></i>
                                @if(TempData["Error"] != null)
                                {
                                    @TempData["Error"]
                                }
                                else
                                {
                                    @:Je gegevens worden veilig opgeslagen en alleen gebruikt voor reserveringsinfo.
                                }                                  
                            </small>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="CreateAccount" class="btn btn-secondary">
                                ← Terug
                            </a>
                            <button type="submit" class="btn btn-primary w-10">
                                Registratie voltooien
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>